{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem: </h4>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo" class="mt-3">Título: </label>
            <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control">
            <label for="slug" class="mt-3">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">
            <label for="descricao" class="mt-3">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">
            <label for="conteudo" class="mt-3">Conteúdo: </label>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria" class="mt-3">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
    </div>
</div>
            <button class="btn btn-success mt-4" type="submit">Editar Postagem</button>
        </form>
