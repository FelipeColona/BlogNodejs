{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova Postagem: </h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo" class="mt-3">Título: </label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug" class="mt-3">Slug: </label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao" class="mt-3">Descrição: </label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo" class="mt-3">Conteúdo: </label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="categoria" class="mt-3">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
    </div>
</div>


<div class="card mt-4">
    <div class="card-body">
            <h4>Configurações da Newsletter:</h4>
            <label for="nomeEmail" class="mt-3">Nome do Email: </label>
            <input type="text" name="nomeEmail" class="form-control">
            <label for="emailRemetente" class="mt-3">Email do Remetente: </label>
            <input type="email" name="emailRemetente" class="form-control">
            <label for="senha" class="mt-3">Senha do Email: </label>
            <input type="password" name="senha" class="form-control">
            <label for="assunto" class="mt-3">Assunto: </label>
            <input type="text" name="assunto" class="form-control">
            <label for="texto" class="mt-3">Corpo do Email: </label>
            <input type="text" name="texto" class="form-control">
    </div>
</div>


            <button class="btn btn-success mt-4" type="submit">Criar Postagem</button>
        </form>

